@model List<Sehir_Tanitim.Models.Siniflar.Slider>
@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        /* Slider Stilleri */
        .slider-container {
            width: 100%;
            max-width: 650px;
            margin: 0 auto;
            position: relative;
            overflow: hidden;
            height: 365px;
        }

        .slider {
            display: flex;
            transition: transform 0.5s ease-in-out;
            height: 100%;
        }

        .slide {
            min-width: 100%;
            height: 100%;
            background-size: cover;
            background-position: center;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        .slide-content {
            text-align: center;
            color: white;
            background-color: rgba(0, 0, 0, 0.6);
            padding: 30px;
            border-radius: 10px;
            max-width: 80%;
        }

            .slide-content h1 {
                font-size: 3rem;
                margin-bottom: 20px;
            }

        /* Navigasyon butonları */
        .slider-nav {
            position: absolute;
            top: 50%;
            width: 100%;
            display: flex;
            justify-content: space-between;
            transform: translateY(-50%);
            z-index: 10;
        }

            .slider-nav button {
                background: rgba(255, 255, 255, 0.5);
                border: none;
                padding: 15px 20px;
                cursor: pointer;
                font-size: 1.5rem;
                color: #333;
                border-radius: 50%;
                margin: 0 20px;
            }

        /* Slider noktaları */
        .slider-dots {
            position: absolute;
            bottom: 30px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            z-index: 10;
        }

            .slider-dots span {
                width: 12px;
                height: 12px;
                border-radius: 50%;
                background: rgba(255, 255, 255, 0.5);
                margin: 0 5px;
                cursor: pointer;
                transition: background 0.3s;
            }

                .slider-dots span.active {
                    background: white;
                }
        h1 {
            text-align: center;
            color: #2E7D32;
        }
    </style>
</head>
<body>
    <!-- Slider Container -->
    <div class="slider-container">
        <div class="slider">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="slide" style="background-image: url('@Model[i].FotoUrl');">
                </div>
            }
        </div>

        <!-- Navigasyon butonları -->
        <div class="slider-nav">
            <button class="prev-slide">&lt;</button>
            <button class="next-slide">&gt;</button>
        </div>

        <!-- Slider noktaları -->
        <div class="slider-dots">
            @for (int i = 0; i < Model.Count; i++)
            {
                <span class="dot @(i == 0 ? "active" : "")" data-slide="@i"></span>
            }
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const slider = document.querySelector('.slider');
            const slides = document.querySelectorAll('.slide');
            const prevBtn = document.querySelector('.prev-slide');
            const nextBtn = document.querySelector('.next-slide');
            const dots = document.querySelectorAll('.dot');

            let currentSlide = 0;
            const slideCount = slides.length;

            // Sonraki slayta geç
            function nextSlide() {
                currentSlide = (currentSlide + 1) % slideCount;
                updateSlider();
            }

            // Önceki slayta geç
            function prevSlide() {
                currentSlide = (currentSlide - 1 + slideCount) % slideCount;
                updateSlider();
            }

            // Slider pozisyonunu güncelle
            function updateSlider() {
                slider.style.transform = `translateX(-${currentSlide * 100}%)`;

                // Nokta güncelleme
                dots.forEach((dot, index) => {
                    dot.classList.toggle('active', index === currentSlide);
                });
            }

            // Buton eventleri
            nextBtn.addEventListener('click', nextSlide);
            prevBtn.addEventListener('click', prevSlide);

            // Nokta eventleri
            dots.forEach(dot => {
                dot.addEventListener('click', function () {
                    currentSlide = parseInt(this.getAttribute('data-slide'));
                    updateSlider();
                });
            });

            // Otomatik geçiş (opsiyonel)
            let slideInterval = setInterval(nextSlide, 5000);

            // Slider üzerine gelince otomatik geçişi durdur
            slider.addEventListener('mouseenter', () => {
                clearInterval(slideInterval);
            });

            // Slider'den çıkınca otomatik geçişi yeniden başlat
            slider.addEventListener('mouseleave', () => {
                slideInterval = setInterval(nextSlide, 5000);
            });
        });
    </script>
    <br />
    <h1><b>Bursa'ya Hoşgeldiniz</b></h1> <br />
    <p>Tarihi dokusu, doğal güzellikleri ve kültürel zenginlikleriyle Bursa, keşfedilmeyi bekleyen büyüleyici bir şehirdir. Osmanlı'nın ilk başkenti olan bu kadim kent; r. Yeşilin her tonunu barındıran doğasıyla huzuru, geçmişin izleriyle kültürü bir arada yaşayacaksınız. Bursa sizi hem dinlendirecek hem de büyüleyecek!</p>
</body>
</html>
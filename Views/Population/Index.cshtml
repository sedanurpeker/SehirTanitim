@model List<Sehir_Tanitim.Models.Siniflar.Population>
    @{
        ViewBag.Title = "Index";
    }

<style>
    body {
        background-color: #f9f9fb; /* sayfa arka planı */
        font-family: "Century Gothic", Helvetica, sans-serif;
        margin: 0;
        padding: 0;
    }

    h2 {
        font-size: 30px;
        line-height: 29px;
        color: #2E7D32;
        padding: 30px 0;
        text-align: center;
        font-weight: bold;
    }

    .table-container {
        max-width: 900px; /* tablo genişliği sınırı */
        margin: 0 auto 40px; /* sayfa ortası, alt boşluk */
        padding: 0 20px; /* sağ-sol boşluk */
    }

    table {
        width: 100%;
        border-collapse: collapse;
        border: 2px solid #a88ede;
        box-shadow: 0 4px 8px rgba(117, 42, 165, 0.15);
        background-color: white;
        border-radius: 8px;
        overflow: hidden;
    }

    thead {
        background-color: #752AA5;
        color: white;
        font-weight: bold;
    }

    th, td {
        padding: 12px 15px;
        text-align: center;
        border-bottom: 1px solid #ddd;
        font-size: 16px;
    }

</style>

    <h2>Bursa Nüfus Dağılımı (Son 3 Yıl)</h2>

    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Yıl</th>
                    <th>Toplam Nüfus</th>
                    <th>Kadın Sayısı</th>
                    <th>Erkek Sayısı</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Yil</td>
                        <td>@string.Format("{0:N0}", item.NufusSayisi)</td>
                        <td>@string.Format("{0:N0}", item.KadinSayisi)</td>
                        <td>@string.Format("{0:N0}", item.ErkekSayisi)</td>
                    </tr>
                }
            </tbody>
        </table>
        <br /><br /><br /><br /><br /><br /><br /><br />
    </div>